---
export interface Props {
	project: any;
}

const { project } = Astro.props;
---

<div class="linkcontainer">
    <a href={project.url} class="level1link">{project.frontmatter.title}</a>
    <p>- {project.frontmatter.subtitle}</p>
</div>

<style lang="scss">
    .linkcontainer {
        margin-bottom: 10px;
        .level1link {
            font-size: 6rem;
            line-height: 6.5rem;
            font-family: var(--font-cursive);
            &:hover {
                font-style: italic;
                transform: translate(-20px, 0%);
                transition: 0.3s ease-in-out;
            }
        }
        p {
            margin-top: -10px;
        }
    }
</style>