---
import Layout from "../layouts/Layout.astro"
import LogoBar from "../components/LogoBar.astro"

const seo = {
    title: "Contact | Amy Henke",
    description: "Web Developer Portfolio",
    image: "../socialbanner.jpg",
    canonicalURL: "https://amyhenke.com/contact",
}
---

<Layout {...seo}>
    <main id="main" class="typography flex flex-col min-h-screen">
        <div class="pagetitlesection flex justify-center flex-col px-8 py-10">
            <LogoBar />
            <h1>Contact</h1>
            <h2>Lets keep things simple</h2>
            <a href="/" class="backarrow"
                ><i class="fa-solid fa-left-long"></i> Back</a
            >
        </div>
        <div class="contactdetails px-8 py-10 flex-1">
            <div class="content max-w-screen-lg m-auto text-center">
                <p>
                    <span>Email</span> - <a href="mailto:amyleehenke1@gmail.com"
                        >amyleehenke1@gmail.com</a
                    >
                </p>
                <a
                    href="https://www.linkedin.com/in/amy-henke-b8836b177/"
                    target="_blank"
                    aria-label="Linked In"
                    ><i class="fa-brands fa-linkedin-in"></i></a
                >
                <a
                    class="ml-2"
                    href="https://github.com/amyhenke"
                    target="_blank"
                    aria-label="Git Hub"><i class="fa-brands fa-github"></i></a
                >
                <a
                    class="ml-2"
                    href="https://codepen.io/amyhenke"
                    target="_blank"
                    aria-label="Code Pen"
                    ><i class="fa-brands fa-codepen"></i></a
                >
            </div>
            <form
                name="contact"
                method="POST"
                data-netlify-recaptcha="true"
                data-netlify="true"
                class="w-full max-w-lg"
            >
                <div class="flex flex-wrap -mx-3 mb-6">
                    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                        <label
                            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                            for="grid-first-name"
                        >
                            Name
                        </label>
                        <input
                            class="appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"
                            id="grid-first-name"
                            type="text"
                            name="name"
                            placeholder="Name"
                        />
                    </div>
                </div>
                <div class="flex flex-wrap -mx-3 mb-6">
                    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                        <label
                            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                            for="grid-email"
                        >
                            Email
                        </label>
                        <input
                            class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                            id="grid-email"
                            name="email"
                            type="email"
                        />
                    </div>
                </div>
                <div class="flex flex-wrap -mx-3 mb-6">
                    <div class="w-full px-3">
                        <label
                            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                            for="grid-message"
                        >
                            Message
                        </label>
                        <textarea
                            class="no-resize appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500 h-48 resize-none"
                            id="grid-message"
                            name="message"></textarea>
                    </div>
                </div>
                <div data-netlify-recaptcha="true"></div>
                <div class="md:flex md:items-center">
                    <div class="md:w-1/3">
                        <button
                            class="shadow bg-teal-400 hover:bg-teal-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded"
                            type="submit"
                        >
                            Send Message
                        </button>
                    </div>
                    <div class="md:w-2/3"></div>
                </div>
            </form>
        </div>
    </main>
</Layout>
